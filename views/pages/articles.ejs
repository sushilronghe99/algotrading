<%- include('../partials/head') %>
<%- include('../partials/header') %>
<body>
    <link href="index.css" rel="stylesheet" type="text/css">
    <div class="container">
        <% articles.forEach((article)=> { %>
        <div class="row">
            <div class="col-xl-12">
                <div class="card mb-3 card-body">
                    <div class="row align-items-center">
                      
                        <div class="col">
                            <div class="card border-0 bg-light rounded shadow">
                                <div class="card-body p-4">
                                    <% if(article.tradingsymbol && article.tradingsymbol.slice(-2) == "CE"){ %>
                                      <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">CALL</span>
                                      <% } else{ %>  
                                        <span class="badge rounded-pill bg-warning float-md-end mb-3 mb-sm-0">PUT</span>
                                        <% } %>
                                    <h5> <%= article.tradingSymbol %></h5>
                                    <div class="mt-3">
                                        <span class="text-muted d-block"><i class="fa fa-home" aria-hidden="true"></i> <a href="#" target="_blank" class="text-muted">LTP (Price) <%= article.price %></a></span>
                                        <span class="text-muted d-block"><i class="fa fa-map-marker" aria-hidden="true"></i> Order Type <%= article.product %></span>
                                        <span class="text-muted d-block"><i class="fa fa-map-marker" aria-hidden="true"></i> SL <%= article.price - article.sl %></span>
                                        <span class="text-muted d-block"><i class="fa fa-map-marker" aria-hidden="true"></i> Order Limit <%= article.price + article.limit %></span>
                                        <span class="text-muted d-block"><i class="fa fa-map-marker" aria-hidden="true"></i> Buy QTY <%= article.quantity %></span>
                                        <span class="text-muted d-block"><i class="fa fa-map-marker" aria-hidden="true"></i> Trigger Date: <%= new Date(article.time).toLocaleDateString("de-DE"); %></span>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <a href="#" class="btn btn-primary"><%= new Date(article.time).getHours()%>:<%=  new Date(article.time).getMinutes()  %></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    
</body>
<%- include('../partials/footer') %>